<h2>Add new badge</h2>

<form action="/admin/badges/create" method="post" class="ajax">
    <fieldset>
    	<div class="field">
			<label>Name</label>
			<input type="text" name="name" value="" class="big required" />
		</div> 
		<div class="field">
			<textarea name="description" class="reset">Description</textarea>
		</div>
	</fieldset>
	
	<fieldset>
		<h3>Archivements</h3>
		<div class="field">
		    <label>XP</label>
			<input type="text" name="xp" value="" class="reset" />
		</div>
	</fieldset>
	
	<input type="submit" name="save" value="Save" />
</form>

<script type="text/javascript">
$('.openbox form').bind('complete', function(e, response) {
	$('div.openbox').trigger('close');
	
	Browser.update(true);
	ObjectPane.load(section+'/show/'+response._id);
});
</script>